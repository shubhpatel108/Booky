<div>

<table>
	<tbody><tr>
		<th>Name of the book</th>
		<th>Author</th>		
		<th>Publisher</th>
		<th>Stock</th>
		<th>Details</th>
	</tr>
	<% $book_groups.each do |book| %>
	<tr>
		<td><%=book.title%></td>
		<td><%=book.author%></td>		
		<td><%=book.publisher%></td>
		<td><%=book.stock%></td>
		<td><%= link_to "details", book_detail_path(book) %> </td>
	</tr>
	<% end %>
	
	<p><%= link_to "Sell", '/book_groups/new' %></p>
</tbody></table>
</div>

