<head>

  <%= stylesheet_link_tag   "grid_layout", "font-awesome.css", "main_layout", "main_responsive", "search-bar", "file", "component","default", "application" %>

</head>

<body>


<div class="container_4">
    <div class="innertitle">
        <p>Popular In Your College</p>
    </div>
    <div class="no-touch">

      <ul class="grid cs-style-3">

      <% @book_groups.each do |book| %>
        <li class="divfloat">
          <figure>
            <div class="img-book">
              <%= image_tag ('temp.jpg')%>
            </div>

            <figcaption>
            <table class="book-grid">
                <tr>
                  <td class="book-name1">
                    <center><%=book.title%></center>
                  </td>
                </tr>
                <tr>
                  <td class="book-author">
                    <%=book.author%>
                  </td>
                </tr>
                <tr>
                  <td class="book-price">
                    <center>
                      <i class="fa fa-rupee fa-4x fa-color_white" style="font-size:1.0em"></i>
                      starting from...<%=book.min_price%>
                    </center>
                  </td>
                </tr>
                <tr class="link-style">
                  <td>
                    <center>
                      <%= link_to "Details", book_detail_path(book) %>
                    </center>
                  </td>
                </tr>
                <tr>
                  <td>
                    <%=book.stock%> Sellers
                  </td>
                </tr>
                <tr>
                  <td>
                    7 Reviews
                  </td>
                </tr>
              </table>
            </figcaption>
          </figure>
        </li>

        <% end %>
        </ul>
    </div>
  <!-- </div> -->
</div>
</body>
