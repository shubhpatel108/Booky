<div class="block">
	<div class="btn-fb-login">
	<span class="icon icon-fb"></span>
<%- if Devise.mappings[:user].omniauthable? %>
    <%= link_to "Sign in with #{Devise.omniauth_providers[0].to_s.titleize}", omniauth_authorize_path(resource_name, Devise.omniauth_providers[0]), :class => "title" %>
<% end -%>
	</div>
</div>

<div class="block">
	<div class="btn-gp-login">
	<span class="icon icon-gp"></span>
<%- if Devise.mappings[:user].omniauthable? %>
    <%= link_to "Login with Google", omniauth_authorize_path(resource_name, Devise.omniauth_providers[1]), :class => "title" %> 
<% end -%>
	</div>
</div>

<%- if Devise.mappings[:user].recoverable? && controller_name != 'passwords' && controller_name != 'registrations' %>
  <%= link_to "Forgot your password?", new_password_path(resource_name) %><br />
<% end -%>

<%- if Devise.mappings[:user].confirmable? && controller_name != 'confirmations' %>
  <%= link_to "Didn't receive confirmation instructions?", new_confirmation_path(resource_name) %><br />
<% end -%>

<%- if Devise.mappings[:user].lockable? && Devise.unlock_strategy_enabled?(:email) && controller_name != 'unlocks' %>
  <%= link_to "Didn't receive unlock instructions?", new_unlock_path(resource_name) %><br />
<% end -%>
