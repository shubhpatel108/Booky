<div>

<table class="reference" style="width:60%">
	<tbody><tr>
		<th>Name of the book</th>
		<th>Author</th>		
		<th>Publisher</th>
		<th>Price</th>
	</tr>
	<% @books.each do |book| %>
	<tr>
		<td><%=book.title%></td>
		<td><%=book.author%></td>		
		<td><%=book.publisher%></td>
		<td><%=book.price%></td>
	</tr>
	<% end %>
	
</tbody></table>
</div>