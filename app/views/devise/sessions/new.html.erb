    	<%= form_for(resource, as: resource_name, url: session_path(resource_name), :validate => true) do |f| %>
      <div class = "field">
    	  <div class ="field-email"><%= f.label :email %><br />
    	  <%= f.email_field :email, autofocus: true, :validate => {:uniqueness => false} %></div>

    	  <div class="field-passwd"><%= f.label :password %><br />
    	    <%= f.password_field :password, autocomplete: "off" %></div>

    	  <% if devise_mapping.rememberable? -%>
    	    <div><%= f.check_box :remember_me %> <%= f.label :remember_me %></div>
    	  <% end -%>

    	  <div class="field-submit"><%= f.submit "Sign in" %></div>
      </div>
    	<% end %> 
    	<%= render :partial => "devise/shared/links", :locals => {:resource_name => :user} %> 

