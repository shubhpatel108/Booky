<head>
  <meta http-equiv="content-type" content="text/html; charset=UTF-8">
  <meta charset="UTF-8">
  <meta http-equiv="X-UA-Compatible" content="IE=edge,chrome=1">
  <title>TheCollegeStore</title>
  <%= stylesheet_link_tag    "application", :media => "all" %>
  <%= stylesheet_link_tag    "jquery-ui-1.10.4.custom.css"%>
  <%= stylesheet_link_tag    "font-awesome.css", "main_layout", "main_responsive", "search-bar"%>
  <%= javascript_include_tag "application" %>
  <%= javascript_include_tag "rails.validations", "jquery-ui-1.10.4.custom.min.js", 'autocomplete-rails.js', 'rails.js' %>
  <%= csrf_meta_tags %>
</head>


<body id="library" class="gecko new-gecko">
  
<div id="shelf">
  <ul class="global-nav">
    <li>
      <a href="#" class="">
        <i class=""></i>
        <span class="nav-tooltip">Home</span>
      </a>
    </li>

      <li>
        <a href="#" class="">
          <i class="fa fa-home fa-4x fa-color_grey"></i>
          <span class="nav-tooltip">Home</span>
        </a>      
      </li>
      <li>
        <a href="#" class="">
          <i class="fa fa-user fa-4x fa-color_grey"></i>
          <span class="nav-tooltip">My Profile </span>
        </a>      
      </li>
      <li>
        <a href="https://www.facebook.com/thecollegestore.co.in" class="">
          <span class="fa fa-facebook fa-4x fa-color_grey"></span>
          <span class="nav-tooltip">Facebook</span>
        </a>      
      </li>
      <li>
        <a href="#" class="">
           <span class="fa fa-android fa-4x fa-color_grey"></span>
           <span class="nav-tooltip">Android App</span>
        </a>      
      </li>
      <li>
        <a href="#" class="">
          <span class="fa fa-book fa-4x fa-color_grey"></span>
          <span class="nav-tooltip">Orders</span>
        </a>      
      </li>
      <li>
        <a href="#" class="">
            <span class="fa fa-list-ul fa-4x fa-color_grey"></span>
            <span class="nav-tooltip">Wish List</span>
        </a>      
      </li>
      <li>
        <a href="/cart/show" class="" data-remote="true">
          <span class="fa fa-shopping-cart fa-4x fa-color_grey"></span>
          <span class="nav-tooltip">Cart</span>
        </a>      
      </li>
      <li>
        <a href="#" class="">
            <span class="fa fa-phone fa-4x fa-color_grey"></span>
            <span class="nav-tooltip">Contact Us</span>
        </a>      
      </li>
    <% if user_signed_in? %>
      <li>
        <a href="/logout" class="">
            <span class="fa fa-sign-out fa-4x fa-color_grey"></span>
            <span class="nav-tooltip">Log out</span>
        </a>      
      </li>
    <% end %>
    </div>

  </ul>
  <a class="trigger-shelf shelf-opener"><span class="icon icon-open-shelf"></span></a>
</div>



  <div id="content">
    <div class="fixed-heading">
  <div class="grid-container grid-parent">
    

    <div class="primary-heading">
      
      <div class="global-secondary-nav">
        <ul>

        <% if user_signed_in? %>
            <div>
      
            </div>
        <%else%>
            <div>
            </div>
        <%end%>
  
          <div class="public-nav">
            <li class="support">
              
            </li>
              <li>
                <a>
                <% if user_signed_in? %>
                  <span><%= link_to "#{current_user.first_name}", edit_user_registration_path %></span>
                <%end%>
              
                   <span><%= cookies[:college_name] %></span></a>
              
              </li>
              <% if !user_signed_in? %>
              <li>
                <%= link_to "Log In", new_user_session_path, {:class=>"button button-primary"}%>
              </li>
              <li>
                <%= link_to "Register", new_user_registration_path, {:class=>"button button-primary"}%>
              </li>
              <%end%>
          </div>
        </ul>

      </div>


      <a id="featurette-1" class="trigger-mobile-shelf" data-featurette="mobile-shelf">

        <span class="icon icon-hamburger">


        </span></a>
      <div>
        <h1>
            TheCollegeStore
        </h1>
        
          <%= render :partial => 'shared/search', :locals => {:book_names => $book_names} %>
      </div>
      
      

      <!-- Loading Spinner -->
      <span class="loading-spinner"><span></span></span>

    </div>

  </div>

  

</div>
<div class="heading-pocket">

   

</div>

    

<div id="featurette-2" class="grid-container featurette" data-featurette="library-index">
  <div style="position: fixed; left: 1085.8px; right: auto; width: 250.2px;" class="grid-20 push-80 fixed-sidebar">
    <div style="height: 603px;" class="scroll-mask">
      <div class="scroll-container">
         <div class="content-filter">



      <div class="filters-container">
        <div id="topics-expander" class="form-group">
          <h4><a>Topics <span class="icon icon-chevron-down"></span></a></h4>
          <ul class="filter-list filter-list-primary featurette" data-featurette="filter-list" id="topic">
            <li><a class="selected" data-filter-value="">All Categories</a></li>
                
            <% $categories.each do |c|%>
            <li>
              <p><%= link_to "#{c.name}", category_books_path(c.id), {:remote => true}%></p>
            </li>
            <% end %>
            </li>
          </ul>
        </div>

        </div>
      </div>
      <%= javascript_include_tag "main_layout_js" %>
    </div>
  </div>
  </div>
</div>

<div id="cart-content">
</div>
<div id="selected-coupons">
<%= render :partial => 'coupons/coupons'%>
</div>
<div id="sub-heading">
</div>
<div id="page-body">
  <%= yield %>
</div>

  <script>
    //for flash messages
    var notice= '<%= flash[:notice] %>'
  var success= '<%= flash[:success] %>'
  var warning= '<%= flash[:warning] %>'
  var error= '<%= flash[:error] %>'
  if(notice)
    FlashNotice("notice", notice);
  else if(success){
    FlashNotice("success", success);
  }
  else if(warning)
    FlashNotice("warning", warning);
  else if(error)
    FlashNotice("notice", error);
  </script>
</body>
</html>
