<div>

<table>
	<tbody><tr>
		<th>Name of the book</th>
		<th>Author</th>		
		<th>Publisher</th>
		<th>Stock</th>
		<th>Details</th>
	</tr>
	<% $book_groups.each do |book| %>
	<tr>
		<td><%=book.title%></td>
		<td><%=book.author%></td>		
		<td><%=book.publisher%></td>
		<td><%=book.books.length%></td>
		<td><%= link_to "details", book_detail_path(book) %> </td>
		<%= form_tag(:action=>'request_seller') do %>
			<td><%= email_field(:seller_email, {:controller=>'books', :action=>'request_seller'}) %></td>
			<td><%= submit_tag "Email"%></td>
		<% end %>
	</tr>
	<% end %>
	
	<p><%= link_to "Sell", '/book_groups/new' %></p>
</tbody></table>
</div>

