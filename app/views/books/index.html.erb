<div>

<table>
	<tbody><tr>
		<th>Name of the book</th>
		<th>Author</th>		
		<th>Publisher</th>
		<th>Price</th>
	</tr>
	<% @books.each do |book| %>
	<tr>
		<td><%=book.title%></td>
		<td><%=book.author%></td>		
		<td><%=book.publisher%></td>
		<td> <%= link_to "Edit", edit_book_path(book) %> </td>
	</tr>
	<% end %>
	
	<p><%= link_to "Add a new book", '/books/new' %></p>
</tbody></table>
</div>

